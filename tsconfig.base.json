{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "setupTest.ts",
    "setupTest-env.d.ts",
    "**/__tests__/**/*",
    "**/__mocks__/**/*",
    "cypress"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
